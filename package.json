{
  "$schema": "http://json.schemastore.org/package",
  "name": "website",
  "version": "4.0.0",
  "description": "Pepe Emoji offers a powerful Discord bot to manage your server and unique Pepe emojis for you to use on Discord",
  "author": "almeidx <almeidx@pm.me> (https://almeidx.dev)",
  "license": "ISC",
  "private": true,
  "scripts": {
    "bot": "yarn workspace @website/bot",
    "lint": "eslint packages --ext .ts,.tsx",
    "lint:fix": "eslint packages --ext .ts,.tsx --fix",
    "main": "yarn workspace @website/main",
    "prettier": "prettier --write **/*.{ts,tsx,js,json,yml}"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/almeidx/pepe-website.git"
  },
  "bugs": {
    "url": "https://github.com/almeidx/pepe-website/issues"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.2.0"
  },
  "devDependencies": {
    "@types/node": "^15.3.1",
    "@types/react": "^17.0.6",
    "@types/react-dom": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "discord-api-types": "^0.18.1",
    "eslint": "^7.26.0",
    "eslint-config-marine": "^9.0.6",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "typescript": "4.2.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }

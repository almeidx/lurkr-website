{
	"name": "lurkr-website",
	"private": true,
	"homepage": "https://lurkr.gg",
	"scripts": {
		"build": "next build",
		"build:analyze": "cross-env ANALYZE=true next build",
		"dev": "next dev",
		"fmt": "pnpm run format",
		"format": "prettier --write . && eslint src --ext ts,tsx --fix",
		"lint": "prettier --check . && eslint src --ext ts,tsx",
		"start": "next start"
	},
	"prettier": {
		"printWidth": 120,
		"useTabs": true
	},
	"eslintConfig": {
		"parserOptions": {
			"project": "./tsconfig.eslint.json"
		},
		"settings": {
			"react": {
				"version": "detect"
			}
		},
		"extends": [
			"neon/common",
			"neon/browser",
			"neon/typescript",
			"neon/react",
			"neon/next",
			"neon/prettier",
			"plugin:tailwindcss/recommended"
		],
		"rules": {
			"default-case": 0,
			"no-warning-comments": 0,
			"prefer-named-capture-group": 0,
			"@typescript-eslint/consistent-type-definitions": [
				2,
				"interface"
			],
			"@typescript-eslint/consistent-type-imports": [
				2,
				{
					"fixStyle": "inline-type-imports"
				}
			],
			"@typescript-eslint/no-import-type-side-effects": 2,
			"@typescript-eslint/unbound-method": 0,
			"import/no-duplicates": [
				2,
				{
					"prefer-inline": true
				}
			],
			"promise/prefer-await-to-callbacks": 0,
			"promise/prefer-await-to-then": 0,
			"tailwindcss/no-custom-classname": 0,
			"unicorn/consistent-function-scoping": 0
		},
		"ignorePatterns": [
			".next/*",
			".vercel/*",
			"node_modules/*",
			"next-env.d.ts"
		]
	},
	"resolutions": {
		"@angular-eslint/eslint-plugin": "npm:@almeidx/empty",
		"@angular-eslint/eslint-plugin-template": "npm:@almeidx/empty",
		"@angular-eslint/template-parser": "npm:@almeidx/empty",
		"astro-eslint-parser": "npm:@almeidx/empty",
		"eslint-mdx": "npm:@almeidx/empty",
		"eslint-plugin-astro": "npm:@almeidx/empty",
		"eslint-plugin-cypress": "npm:@almeidx/empty",
		"eslint-plugin-jest": "npm:@almeidx/empty",
		"eslint-plugin-mdx": "npm:@almeidx/empty",
		"eslint-plugin-rxjs": "npm:@almeidx/empty",
		"eslint-plugin-rxjs-angular": "npm:@almeidx/empty",
		"eslint-plugin-svelte3": "npm:@almeidx/empty",
		"eslint-plugin-vue": "npm:@almeidx/empty",
		"vue-eslint-parser": "npm:@almeidx/empty"
	},
	"dependencies": {
		"@almeidx/ms": "^1.2.1",
		"js-cookie": "^3.0.5",
		"next": "^14.0.2",
		"next-progress": "^2.3.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-icons": "^4.11.0",
		"sharp": "^0.32.6",
		"tslib": "^2.6.2"
	},
	"devDependencies": {
		"@next/bundle-analyzer": "^14.0.2",
		"@types/js-cookie": "^3.0.6",
		"@types/node": "^20.9.0",
		"@types/react": "^18.2.37",
		"autoprefixer": "^10.4.16",
		"cross-env": "^7.0.3",
		"eslint": "^8.53.0",
		"eslint-config-neon": "^0.1.57",
		"eslint-plugin-tailwindcss": "^3.13.0",
		"postcss": "^8.4.31",
		"prettier": "^3.1.0",
		"tailwind-scrollbar": "^3.0.5",
		"tailwindcss": "^3.3.5",
		"typescript": "~5.2.2"
	},
	"packageManager": "pnpm@8.10.3+sha256.eb2548d6347afc7002a046b7be3ee3c8222bc71f68418dcf9f90fa0a7341c41a",
	"engines": {
		"node": "18"
	}
}

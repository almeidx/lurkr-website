{
	"name": "lurkr-website",
	"private": true,
	"homepage": "https://lurkr.gg",
	"scripts": {
		"build": "next build",
		"build:analyze": "cross-env ANALYZE=true next build",
		"dev": "next dev",
		"fmt": "pnpm format",
		"format": "prettier --write . && eslint src --ext ts,tsx --fix",
		"postinstall": "husky install .github/husky",
		"lint": "prettier --check . && eslint src --ext ts,tsx",
		"start": "next start"
	},
	"lint-staged": {
		"*.tsx": "eslint --fix",
		"*.{ts,tsx,js,mjs,cjs,json,yml}": "prettier --write"
	},
	"prettier": {
		"printWidth": 120,
		"trailingComma": "all",
		"useTabs": true
	},
	"eslintConfig": {
		"parserOptions": {
			"project": "./tsconfig.eslint.json"
		},
		"settings": {
			"react": {
				"version": "detect"
			}
		},
		"extends": [
			"neon/common",
			"neon/browser",
			"neon/typescript",
			"neon/react",
			"neon/next",
			"neon/prettier",
			"plugin:tailwindcss/recommended"
		],
		"rules": {
			"default-case": 0,
			"no-duplicate-imports": 2,
			"no-warning-comments": 0,
			"prefer-named-capture-group": 0,
			"@typescript-eslint/consistent-type-definitions": [
				2,
				"interface"
			],
			"@typescript-eslint/unbound-method": 0,
			"promise/prefer-await-to-callbacks": 0,
			"promise/prefer-await-to-then": 0,
			"tailwindcss/no-custom-classname": 0,
			"unicorn/consistent-function-scoping": 0
		},
		"ignorePatterns": [
			".next/*",
			".vercel/*",
			"node_modules/*",
			"next-env.d.ts"
		],
		"root": true
	},
	"resolutions": {
		"@angular-eslint/eslint-plugin": "npm:@almeidx/empty",
		"@angular-eslint/eslint-plugin-template": "npm:@almeidx/empty",
		"@angular-eslint/template-parser": "npm:@almeidx/empty",
		"astro-eslint-parser": "npm:@almeidx/empty",
		"eslint-mdx": "npm:@almeidx/empty",
		"eslint-plugin-astro": "npm:@almeidx/empty",
		"eslint-plugin-cypress": "npm:@almeidx/empty",
		"eslint-plugin-jsx-a11y": "npm:@almeidx/empty",
		"eslint-plugin-mdx": "npm:@almeidx/empty",
		"eslint-plugin-rxjs": "npm:@almeidx/empty",
		"eslint-plugin-rxjs-angular": "npm:@almeidx/empty",
		"eslint-plugin-svelte3": "npm:@almeidx/empty",
		"eslint-plugin-vue": "npm:@almeidx/empty",
		"vue-eslint-parser": "npm:@almeidx/empty"
	},
	"dependencies": {
		"@almeidx/ms": "^1.2.1",
		"js-cookie": "^3.0.5",
		"next": "^13.4.19",
		"next-progress": "^2.3.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-icons": "^4.10.1",
		"sharp": "^0.32.5",
		"tslib": "^2.6.2"
	},
	"devDependencies": {
		"@next/bundle-analyzer": "^13.4.19",
		"@types/js-cookie": "^3.0.3",
		"@types/node": "^20.5.2",
		"@types/react": "^18.2.20",
		"autoprefixer": "^10.4.15",
		"cross-env": "^7.0.3",
		"eslint": "^8.47.0",
		"eslint-config-neon": "^0.1.54",
		"eslint-plugin-tailwindcss": "^3.13.0",
		"husky": "^8.0.3",
		"lint-staged": "^14.0.1",
		"postcss": "^8.4.28",
		"prettier": "^3.0.2",
		"tailwind-scrollbar": "^3.0.5",
		"tailwindcss": "^3.3.3",
		"typescript": "~5.1.6"
	},
	"packageManager": "pnpm@8.6.0",
	"engines": {
		"node": "18"
	}
}
